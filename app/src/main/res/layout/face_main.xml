<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/mon"
            android:text="12"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_above="@+id/num"
            android:layout_alignStart="@+id/image"
            android:layout_alignEnd="@+id/image"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="418dp"></TextView>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="428dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="216dp"></ImageView>

        <ImageButton
            android:id="@+id/up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/image"
            android:layout_alignBottom="@+id/image"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"></ImageButton>

        <ImageButton
            android:id="@+id/down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/image"
            android:layout_alignBottom="@+id/image"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"></ImageButton>

        <TextView
            android:id="@+id/num"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/down"
            android:layout_toEndOf="@+id/up"></TextView>
    </RelativeLayout>
</LinearLayout>